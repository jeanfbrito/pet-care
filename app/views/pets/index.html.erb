<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Kind</th>
      <th scope="col">Age</th>
      <th scope="col">Medical Records</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td>
          <%= kind_iconed(pet.kind).html_safe %>
        </td>
        <td><%= distance_of_time_in_words(Time.now, pet.birthdate) %></td>
        <td><%= link_to(pet.medical_records.count, pet_medical_records_path(pet)) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
